{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "types": ["vitest/globals"]
  },
  "include": ["*.ts", "backends/**/*.ts", "cli/**/*.ts", "services/**/*.ts", "utils/**/*.ts", "tests/**/*.ts", "types/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
